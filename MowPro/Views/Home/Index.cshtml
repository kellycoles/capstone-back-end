@{
    ViewData["Title"] = "Home Page";
}
<style>
    html {
        overflow-y: hidden;
        overflow-x: hidden;
    }

    body {
        background: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(../images/grass.jpg) no-repeat center;
        background-size: cover;
    }

    .home-header {
        padding-top: 150px;
    }

    h1 {
        font-size: 5.625rem;
        color: rgba(255, 255, 255, 1);
        font-weight: bold;
        line-height: 1.3;
        /*text-shadow: 0 2px 2px rgba(0,0,0, .70);*/
        margin-top:200px;
          text-shadow: 0 1px 0 #ccc,
               0 2px 0 #c9c9c9,
               0 3px 0 #bbb,
               0 4px 0 #b9b9b9,
               0 5px 0 #aaa,
               0 6px 1px rgba(0,0,0,.1),
               0 0 5px rgba(0,0,0,.1),
               0 1px 3px rgba(0,0,0,.3),
               0 3px 5px rgba(0,0,0,.2),
               0 5px 10px rgba(0,0,0,.25),
               0 10px 10px rgba(0,0,0,.2),
               0 20px 20px rgba(0,0,0,.15);
    }

    .title {
        color: white;
        font-size: 1.625em;
        letter-spacing: .065em;
        font-weight: 200;
    }

    .home-footer div {
        color: white;
    }

    .home-footer a {
        color: #89c058;
    }

    .home-footer div {
        color: white;
        position: absolute;
        bottom: 15px;
        left: 30px;
    }

    .footer,
    .top-link {
        visibility: hidden;
    }
</style>

<div class="overlay">
    <div class="text-center home-header">
        <h1>MowPro</h1>
        <p class="title">Lawn Care Management</p>
    </div>
</div>
<footer class="home-footer text-muted">
    <div class="container">
        &copy; 2019 - MowPro - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>