@model MowPro.Models.Service

@{
    ViewData["Title"] = "Delete";
}

<h1 class="h1">Delete</h1>
<hr />
<h3>Are you sure you want to delete this service?</h3>
<br />
@if (ViewBag.count > 0)
{
    if (ViewBag.count == 1)
    {
        <h4 class="alert alert-dismissible alert-danger">There is @ViewBag.count current job associated with this service</h4>
    }
    else
    {
        <h4 class="alert alert-dismissible alert-danger">There are @ViewBag.count current jobs associated with this service</h4>

    }
}
<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>


    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ServiceId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-outline-secondary" href="javascript:history.back()">Cancel</a>
    </form>
</div>


